<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amir.simpletodo.MainActivity">


    <include layout="@layout/context_main"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="invisible"
        android:minHeight="70dp"
        android:background="@drawable/card_view_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/task_insert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50sp"
                android:inputType="text"
                android:imeOptions="actionGo"
                android:hint="@string/hint_edittext"/>

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10sp"
            android:src="@drawable/ic_action_send"
            app:fabSize="mini" />



    </android.support.v7.widget.CardView>




</android.support.design.widget.CoordinatorLayout>
